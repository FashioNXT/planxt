<h1>Plan Models</h1>

<ul>
  <% @plan_model.each do |plan_model| %>
      <%= link_to plan_model.name, plan_model %>
      <p> <%= plan_model.data %></p>
      <ul>
        <li><%= link_to "Edit", edit_plan_model_path(@plan_model) %></li>
          <li><%= link_to "Destroy", plan_model_path(@plan_model), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
      </ul>
    
  <% end %>
</ul>

<%= link_to "New Plan Model", new_plan_model_path %>